<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tnt.android.android_bookshared.EditLocationActivity">

    <TextView
        android:id="@+id/txt_edit_location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last known location:"/>

    <TextView
        android:id="@+id/txt_latitude_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_edit_location_title"
        android:text="Latitude: "/>

    <TextView
        android:id="@+id/txt_latitude_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_latitude_label"
        android:layout_alignBottom="@id/txt_latitude_label"
        android:text="0.0"/>

    <TextView
        android:id="@+id/txt_longitude_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_latitude_label"
        android:text="Longitude: "/>

    <TextView
        android:id="@+id/txt_longitude_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_longitude_label"
        android:layout_alignBottom="@id/txt_longitude_label"
        android:text="0.0"/>

    <Button
        android:id="@+id/btn_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_longitude_label"
        android:text="View Location"/>

    <Button
        android:id="@+id/btn_get_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_view_location"
        android:text="Get current Location"/>

</RelativeLayout>
